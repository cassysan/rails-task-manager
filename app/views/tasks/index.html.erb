<div class="wrapper">
  <div class="container">
    <h1>My Tasks</h1>
    <% @tasks.each do |task| %>
      <div class="row">
        <div><input id="checkBox" type="checkbox" <%= "checked" if task.completed %>></div>
        <div><p><%= link_to task.title, task_path(task.id) %></p></div>
        <div> <%= link_to delete_path(task.id), method: :delete do %>
          <i class="fas fa-trash-alt"></i>
            <% end %>
        </div>
      </div>
    <% end %>

    <hr>
    <div class="row">
      <%= link_to new_path do %>
      <i class="fas fa-plus"></i><p>Add a new task</p>
      <% end %>
    </div>
  </div>
</div>
