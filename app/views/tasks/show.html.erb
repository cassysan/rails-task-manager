<div class="container">
  <div class=>
    <h1><%= @task.title %> </h1>

    <div class="btn btn-primary">
      <%= link_to "Edit this task", edit_path(@task) %>
      </div>
  </div>
  <p class="details"> <%= @task.details %></p>

  <form action="">
    <div class="row">
      <div><input id="checkBox" type="checkbox" <%= "checked" if @task.completed %>></div>
      <div>
        <% if @task.completed %>
        <p>This task is completed</p>
        <% else %>
        <p>This task is not completed yet</p>
        <% end %>
      </div>
    </div>
  </form>

  <%= link_to "Back to list", tasks_path %>
</div>
